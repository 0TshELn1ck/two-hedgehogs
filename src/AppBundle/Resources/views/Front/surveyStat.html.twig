{% extends(':Front:base.html.twig') %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        ul,ol{margin-top:0;margin-bottom:10px;margin-right:0;margin-left:25px;padding:0}
        .blue{color:#478fca !important}
        .green{color:#69aa46 !important}
        .widget-box{padding:0;-webkit-box-shadow:none;box-shadow:none;margin:3px 0;border:1px solid #CCC}
        .widget-main{padding:19px}
        .progress{border-radius:0;-webkit-box-shadow:none;box-shadow:none;background:#e9e9e9;height:18px}
        .progress.progress-mini{height:9px}
        .progress-bar{line-height:8px;font-size:11px}
    </style>
{% endblock %}

{% block title %}Статистика опитувань{% endblock %}

{% block content %}
    <div class="content-wrapper">

        {#Page label#}
        <section class="menu">
            <div class="container">
                <div class="menu_title">
                    <h2>Статистика</h2>
                </div>
                {% if app.user %}
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-4">
                                {% if statList|length > 0 %}
                                    {% for survey in statList %}
                                        <div class="widget-box widget-main">
                                            <h3 class="blue">{{ survey.title }}</h3>
                                            <ul>
                                                {% for item in survey.surveyAnswers %}
                                                    <li class="green">{{ item.answer }}</li>
                                                    {% set statPercents = item.count/percent %}
                                                    <div class="progress progress-mini">
                                                        <div class="progress-bar progress-bar-success progress-bar-striped"
                                                             style="width: {{ statPercents|round }}%;"></div>
                                                    </div>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <h3 class="alert-danger text-center">Нових опитувань немає</h3>
                                {% endif %}
                            </div>
                            <div class="col-xs-5">
                                <span class="btn btn-light btn-xs">
                    <a href="{{ path('survey_list') }}"><i
                                class="glyphicon glyphicon-list-alt"> Опитування</i></a>
                </span>
                            </div>
                        </div>
                    </div> {# end row #}
                {% else %}
                    <h3 class="alert-danger text-center">Ця сторінка доступна тільки для зареєстрованих
                        користувачів</h3>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock content %}