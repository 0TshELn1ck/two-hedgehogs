{% extends(':Front:base.html.twig') %}

{% block title %}Опитування{% endblock %}

{% block content %}
    <div class="content-wrapper">

        {#Page label#}
        <section class="menu">
            <div class="container">
                <div class="menu_title">
                    <h2>Опитування</h2>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-3"></div>
                        <div class="col-xs-4">
                            {% for survey in surveyList %}
                                <h3>{{ survey.title }}</h3>
                                <ul>
                                    {% for item in survey.surveyAnswers %}
                                        <li>{{ item.answer }}</li>
                                    {% endfor %}
                                </ul>
                                <hr>
                            {% endfor %}
                        </div>
                        <div class="col-xs-5"></div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock content %}