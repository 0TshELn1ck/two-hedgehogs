{% extends(':Front:base.html.twig') %}

{% block title %}Опитування{% endblock %}

{% block content %}
    <div class="content-wrapper">

        {#Page label#}
        <section class="menu">
            <div class="container">
                <div class="menu_title">
                    <h2>Опитування</h2>
                </div>
                {% if app.user %}
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-4">
                                {% if newSurveys|length > 0 %}
                                    {% for survey in newSurveys %}
                                        <h3 class="blue">{{ survey.title }}</h3>
                                        <div>
                                            {% for item in survey.surveyAnswers %}
                                                <p>{{ form(answerForm[item.id]) }}</p>
                                            {% endfor %}
                                        </div>
                                        <hr>
                                    {% endfor %}
                                {% else %}
                                    <h3 class="alert-danger text-center">Нових опитувань немає</h3>
                                {% endif %}
                            </div>
                            <div class="col-xs-5">
                                <span class="btn btn-light btn-xs">
                                    <a href="{{ path('survey_statistics') }}"><i
                                    class="glyphicon glyphicon-stats"> Статистика</i></a>
                                </span>
                            </div>
                        </div>
                    </div> {# end row #}
                {% else %}
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-4">
                                {% if newSurveys|length > 0 %}
                                    {% for survey in newSurveys %}
                                        <h3 class="blue">{{ survey.title }}</h3>
                                        <div>
                                            <ul>
                                            {% for item in survey.surveyAnswers %}
                                                <li class="green">{{ item.answer }}</li>
                                            {% endfor %}
                                            </ul>
                                        </div>
                                        <hr>
                                    {% endfor %}
                                {% else %}
                                    <h3 class="alert-danger text-center">Нових опитувань немає</h3>
                                {% endif %}
                            </div>
                            <div class="col-xs-5"></div>
                        </div>
                    </div> {# end row #}
                {% endif %}
            </div>
        </section>
    </div>
{% endblock content %}