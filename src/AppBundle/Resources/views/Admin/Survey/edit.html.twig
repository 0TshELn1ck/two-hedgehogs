{% extends('@App/Admin/Survey/index.html.twig') %}
{% form_theme form _self %}
{%- block form_widget_compound -%}
    {%- if form.parent is empty -%}
        {{ form_errors(form) }}
    {%- endif -%}
    {{- block('form_rows') -}}
    {{- form_rest(form) -}}
{%- endblock form_widget_compound -%}

{% block breadcrumbs %}
    {{ parent() }}
    <li>
        Редагування опитування
    </li>
{% endblock breadcrumbs %}

{% block search %}
    <form class="form-search" METHOD="post" action="{{ path('admin_dish_search') }}">
        <span class="input-icon">
            <input type="text" min="3" placeholder="Search SurVeyS..." class="nav-search-input" name="search"
                   id="nav-search-input" autocomplete="off"/>
        <i class="ace-icon fa fa-search nav-search-icon"></i>
        </span>
    </form>
{% endblock search %}

{% block content %}
    <div class="page-content">
        <div class="row">
            <div class="col-xs-12">
                <h3>Редагування опитування</h3>
                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
                <div class="form-group has-info">
                    <div class="col-sm-9">
                        <label class="col-sm-3 control-label" style="color:#393939 ">Назва-запитання</label>
                        {{ form_errors(form.title) }}
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9">
                        <label class="col-sm-3 control-label">Статус</label>
                        {{ form_errors(form.status) }}
                        {{ form_widget(form.status) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9">
                        <label class="col-sm-3 control-label">Відповіді:</label>
                        <div class="col-sm-6">
                            {% for sAnswer in form.surveyAnswers %}
                                <div class="form-group has-success">
                                    {{ form_errors(sAnswer) }}
                                    {{ form_widget(sAnswer) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9">
                        <label class="col-sm-3 control-label no-padding-right"></label>
                        <input type="submit" value="Зберегти" class="btn btn-default"/>
                    </div>
                </div>
                {{ form_end(form) }}
            </div><!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div><!-- /.row -->
{% endblock %}
