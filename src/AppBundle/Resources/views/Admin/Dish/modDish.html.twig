    </div>
{% endblock %}#}

{% block content %}
    <h3>Modify Dish</h3>
    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
    <div class="form-group">
        <div class="col-sm-9">
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            {{ form_label(form.recipe) }}
            {{ form_errors(form.recipe) }}
            {{ form_widget(form.recipe) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            {{ form_label(form.ingredients) }}
            {{ form_errors(form.ingredients) }}
            {{ form_widget(form.ingredients) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            {{ form_label(form.price) }}
            {{ form_errors(form.price) }}
            {{ form_widget(form.price) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <label class="col-sm-3 control-label no-padding-right"></label>
            <input type="submit" value="Modify" class="btn btn-default"/>
        </div>
    </div>
    {{ form_end(form) }}
    <br>
    <p><b>{{ msg }}</b></p>
{% endblock content %}
