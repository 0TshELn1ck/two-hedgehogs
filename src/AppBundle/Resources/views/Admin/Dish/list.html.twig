{% extends(':Admin:base.html.twig') %}
{% block content %}
    <div class="page-content">
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <span class="btn btn-light btn-xs">
                    <a href="{{ path('admin_dish_add') }}"><i
                                class="ace-icon fa fa-plus bigger-10"> Додати</i></a>
                </span>

                <div class="row">
                    <br>

                    <div class="col-xs-12">
                        <table id="simple-table" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>name</th>
                                <th>price</th>
                                <th>created</th>
                                <th>modified</th>
                                <th></th>
                            </tr>
                            </thead>
                            {% if dishList %}
                                {% for item in dishList %}
                                    <tbody>
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ item.name }}</td>
                                        <td>{{ item.price }}</td>
                                        <td>{{ item.createdAt|date }}</td>
                                        <td>{{ item.updatedAt|date }}</td>
                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">
                                                <span class="btn btn-xs btn-info">
                                                    <a href="{{ path('admin_dish_edit', {'id': item.id}) }}">
                                                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                    </a>
                                                </span>

                                                <button class="btn btn-xs btn-danger hidden">
                                                    <i class="">
                                                        {{ form_start(deleteForm[item.id],
                                                        {attr : {onsubmit: 'return confirm("Ви дійсно бажаєте видалити страву?");' }}) }}
                                                        {{ form_widget(deleteForm[item.id].submit) }}
                                                        {{ form_end(deleteForm[item.id]) }}
                                                    </i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            {% endif %}
                        </table>
                        {% include ':Admin:paginate.html.twig' %}
                    </div><!-- /.span -->
                </div><!-- /.row -->
            </div><!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div><!-- /.row -->
{% endblock content %}
