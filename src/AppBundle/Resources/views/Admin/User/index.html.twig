{% extends(':Admin:base.html.twig') %}
{% block breadcrumbs %}
    {{ parent() }}
    <li>
        <a href="{{ path('admin_user_index') }}">Користувачі</a>
    </li>
{% endblock breadcrumbs %}

{% block content %}
    <div class="page-content">
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">
                        <table id="simple-table" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Пошта</th>
                                <th>
                                    <i class="ace-icon fa fa-clock-o"></i>
                                    Дата реєстрації
                                </th>
                                <th>
                                    <i class="ace-icon fa fa-clock-o"></i>
                                    Дата редагуваня профілю
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                            {% if user %}
                                {% for item in user %}
                                    <tbody>
                                    <tr>
                                        <td>
                                            <a href="#">{{ item.id }}</a>
                                        </td>
                                        <td>{{ item.email }}</td>
                                        <td class="hidden-480">{{ item.createdAt|date("M d, Y  h:i A") }}</td>
                                        <td>
                                            {% if item.createdAt == item.updatedAt %}
                                                Профіль не редагувався
                                            {% else %}
                                                {{ item.updatedAt|date("M d, Y  h:i A") }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">
                                                    {{ form_start(deleteForm[item.id], {attr :
                                                        {onsubmit: 'return confirm("Ви дійсно хочете видалити користувача?");' }}) }}
                                                    {{ form_widget(deleteForm[item.id].submit) }}
                                                    {{ form_end(deleteForm[item.id]) }}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            {% endif %}

                        </table>
                        <ul class="pager">
                            {{ knp_pagination_render(user) }}
                        </ul>
                    </div><!-- /.span -->
                </div><!-- /.row -->
            </div><!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div><!-- /.row -->
{% endblock content %}


