{% extends('@App/Admin/User/index.html.twig') %}


{% block breadcrumbs %}
    {{ parent() }}
    {% if breadcrumbs is defined %}
        <li>
            {{ breadcrumbs }}
            <script>
                var update = true;
            </script>
        </li>
    {% else %}
        <li>
            <a href="{{ path('admin_user_new') }}">Додати нового</a>
        </li>
    {% endif %}
{% endblock breadcrumbs %}

{% block content %}

    <div id="user-profile-3" class="user-profile row">
        <div class="col-sm-offset-1 col-sm-10">
            <div class="space"></div>
            {{ form_start(userForm) }}
            <div class="form-horizontal">
                <div class="tabbable">
                    <ul class="nav nav-tabs padding-16">
                        <li class="active">
                            <a data-toggle="tab" href="#edit-basic">
                                <i class="green ace-icon fa fa-pencil-square-o bigger-125"></i>
                                Основна інформація
                            </a>
                        </li>

                        <li>
                            <a data-toggle="tab" href="#edit-settings">
                                <i class="purple ace-icon fa fa-cog bigger-125"></i>
                                Налаштування
                            </a>
                        </li>

                        <li>
                            <a class="password_block_tab" data-toggle="tab" href="#edit-password">
                                <i class="blue ace-icon fa fa-key bigger-125"></i>
                                Пароль
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content profile-edit-tab-content">
                        <div id="edit-basic" class="tab-pane in active">
                            <h4 class="header blue bolder smaller">Основна</h4>

                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <label class="ace-file-input ace-file-multiple">
                                        <span class="ace-file-container hide-placeholder selected">
                                            <span class="ace-file-name large" data-title="profile-pic.jpg">
                                            <img src="{{ asset('images/profile-pic.jpg') }}"> </img>
                                            </span></span>
                                    </label>
                                </div>

                                <div class="vspace-12-sm"></div>

                                <div class="col-xs-12 col-sm-8">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right"
                                               for="form-field-username">Логін</label>
                                        <div class="col-sm-8">
                                            {{ form_row(userForm.username) }}
                                        </div>
                                    </div>

                                    <div class="space-4"></div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Name</label>

                                        <div class="col-sm-8">
                                            <input class="input-small" type="text" id="form-field-first"
                                                   placeholder="First Name" value="Alex">
                                            <input class="input-small" type="text" id="form-field-last"
                                                   placeholder="Last Name" value="Doe">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr>
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-date">День
                                    народження</label>

                                <div class="col-sm-9">
                                    <div class="input-medium">
                                        <div class="input-group">
                                            <input class="input-medium date-picker" type="text"
                                                   data-date-format="dd-mm-yyyy" placeholder="dd-mm-yyyy"
                                                   id="datepicker">
                                            <span class="input-group-addon">
                                                <i class="ace-icon fa fa-calendar"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="space-4"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right">Стать</label>

                                <div class="col-sm-9">
                                    <label class="inline">
                                        <input name="form-field-radio" type="radio" class="ace">
                                        <span class="lbl middle"> Чоловіча</span>
                                    </label>

                                    &nbsp; &nbsp; &nbsp;
                                    <label class="inline">
                                        <input name="form-field-radio" type="radio" class="ace">
                                        <span class="lbl middle"> Жіноча</span>
                                    </label>
                                </div>
                            </div>

                            <div class="space-4"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right"
                                       for="form-field-comment">Примітки</label>

                                <div class="col-sm-9">
                                    <textarea id="form-field-comment"></textarea>
                                </div>
                            </div>

                            <div class="space"></div>
                            <h4 class="header blue bolder smaller">Контактна інформація</h4>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-email">Поштова
                                    адреса</label>
                                <div class="col-sm-9">
                                    <span class="input-icon input-icon-right">
                                        {{ form_widget(userForm.email) }}
                                        <i class="ace-icon fa fa-envelope"></i>

                                    </span>
                                </div>
                            </div>

                            <div class="space-4"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-phone">
                                    Телефонний номер
                                </label>
                                <div class="col-sm-9">
                                    <span class="input-icon input-icon-right">
                                        <input class="input-medium input-mask-phone" type="text" id="form-field-phone">
                                        <i class="ace-icon fa fa-phone fa-flip-horizontal"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="space"></div>
                            <h4 class="header blue bolder smaller">Соціальні мережі</h4>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Facebook</label>

                                <div class="col-sm-9">
                                    <span class="input-icon">
                                        <input type="text" placeholder="facebook_alexdoe" id="form-field-facebook">
                                        <i class="ace-icon fa fa-facebook blue"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="space-4"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right"
                                       for="form-field-twitter">Twitter</label>
                                <div class="col-sm-9">
                                    <span class="input-icon">
                                        <input type="text" placeholder="twitter_alexdoe" id="form-field-twitter">
                                        <i class="ace-icon fa fa-twitter light-blue"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="space-4"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right"
                                       for="form-field-gplus">Google+</label>

                                <div class="col-sm-9">
                                    <span class="input-icon">
                                        <input type="text" placeholder="google_alexdoe" id="form-field-gplus">
                                        <i class="ace-icon fa fa-google-plus red"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div id="edit-settings" class="tab-pane">
                            <div class="space-10"></div>

                            <div>
                                <span class="col-sm-6">
									<label class="pull-right inline">
                                        <small class="muted smaller-90">Профіль активовано:</small>
                                        {{ form_widget(userForm.enabled) }}
                                        <span class="lbl middle"></span>
                                    </label>
								</span>
                            </div>
                        </div>

                        <div id="edit-password" class="tab-pane">
                            <div class="space-10"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-pass1">
                                    Пароль</label>

                                <div class="col-sm-9">
                                    {{ form_row(userForm.password.first) }}
                                </div>
                            </div>

                            <div class="space-4"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-pass2">
                                    Повторіть пароль</label>

                                <div class="col-sm-9">
                                    {{ form_row(userForm.password.second) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" type="submit">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Зберегти
                        </button>

                        &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Стерти
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(userForm) }}
        </div><!-- /.span -->
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap-datepicker.min.js') }}"></script>
    <script>
        $('document').ready(function () {

            $('form[name="app_bundle_user_type"]').submit(function () {
                pass = $('#app_bundle_user_type_password_first');
                conf_pass = $('#app_bundle_user_type_password_second');

                if (pass.val().length > 5 && pass.val() == conf_pass.val()) {
                    return true;
                } else if (update && pass.val() == conf_pass.val()){
                    return true;
                }

                $('.password_block_tab').click();
                pass.css('border', '1px solid red');
                conf_pass.css('border', '1px solid red');

                return false;
            });
        });

        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
{% endblock %}