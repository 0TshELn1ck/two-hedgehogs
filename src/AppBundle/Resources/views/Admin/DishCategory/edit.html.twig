{% extends('@App/Admin/DishCategory/index.html.twig') %}

{% form_theme form ':Admin:themeFields.html.twig' %}
{% block breadcrumbs %}
    {{ parent() }}
    <li>Редагувати категорію</li>
{% endblock breadcrumbs %}

{% block content %}
    <div class="page-content">
        <div class="col-sm-12">
            <h3>Редагування категорії</h3>
            {{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
            <div class="form-group">
                <div class="col-sm-2 control-label no-padding-right">Категорія</div>
                <div class="col-sm-9">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9">
                    <label class="col-sm-3 control-label no-padding-right"></label>
                    <input type="submit" value="Зберегти" class="btn btn-default"/>
                </div>
            </div>
            {{ form_end(form) }}
            <br>
            {% if msg != "" %}
                <p><b>{{ msg }}</b></p>
                <a href="{{ path('admin_dish_category_index') }}"><b>Перелік/редагування категорій</b></a>
            {% endif %}
        </div>
    </div>
{% endblock content %}
